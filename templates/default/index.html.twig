                                    <div class="navigation-manual2">
                                        <div class="manual-btn2-left" id="radioAvis1"> < </div>
                                        <div class="manual-btn2-right" id="radioAvis2"> > </div>
                                    </div>
                                </div>
                            </div>
                            <script type="text/javascript">
                                let countAvis = 0;

                                /**
                                 *
                                 */
                                function updateAvis(){
                                    if(countAvis === 0 || countAvis > 2){
                                        document.getElementById("firstSlide").style.marginLeft = "0";
                                        countAvis = 0;
                                    }else {
                                        document.getElementById("firstSlide").style.marginLeft = "-" + (countAvis * 25) + "%";
                                    }

                                }

                                document.getElementById("radioAvis1").addEventListener("click", function (){
                                    if(countAvis > 0) countAvis--;
                                    updateAvis();
                                });
                                document.getElementById("radioAvis2").addEventListener("click", function (){
                                    countAvis++;
                                    updateAvis();
                                });
                            </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
