                </div>
                <div>
                    <!--<div class="triangleCode"></div>-->
                    <div class="slider" style="border: 1px solid black; height: 100%; padding-bottom: 0.5%">
                        <div class="slides">
                            <input type="radio" name="radio-btn" id="radioActu1">
                            <input type="radio" name="radio-btn" id="radioActu2">
                            <input type="radio" name="radio-btn" id="radioActu3">
                            <input type="radio" name="radio-btn" id="radioActu4">

                            {% set first = true %}

                            {% for actus in derniereActus %}

                                {% if first == true %}
                                    <div class="slide firstSlide" id="firstSlide">
                                    {% set first = false %}
                                {% else %}
                                    <div class="slide">
                                {% endif %}
                                    <div style="text-align: center; font-size: 25px">
                                        <p>
                                            {{ actus.titreActus | raw}}
                                        </p>
                                    </div>
                                    <div style="text-align: center">
                                        <p>
                                            {{ actus.contenuActus | raw}}
                                        </p>
                                    </div>
                                </div>
                                {% endfor %}

                                <div class="navigation-manualActu">
                                    <label for="radioActu1" class="manual-btn auto-btn1"></label>
                                    <label for="radioActu2" class="manual-btn auto-btn2"></label>
                                    <label for="radioActu3" class="manual-btn auto-btn3"></label>
                                    <label for="radioActu4" class="manual-btn auto-btn4"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        let countActu = 1;

                        function carouselActu(){
                            document.getElementById("radioActu" + countActu).checked = true;
                            countActu++;
                            if(countActu > 4 ) countActu = 1;
                        }

                        function updateIntervalActu(radio){
                            clearInterval(moveActu);
                            countActu = radio;
                            moveActu = setInterval(carouselActu, 5000);
                        }

                        document.getElementById("radioActu1").addEventListener("click", function (){
                            updateIntervalActu(1)
                        });
                        document.getElementById("radioActu2").addEventListener("click", function (){
                            updateIntervalActu(2)
                        });
                        document.getElementById("radioActu3").addEventListener("click", function (){
                            updateIntervalActu(3)
                        });
                        document.getElementById("radioActu4").addEventListener("click", function (){
                            updateIntervalActu(4)
                        });

                        carouselActu();
                        let moveActu = setInterval(carouselActu, 5000);

                    </script>
                </div>
            </div>
